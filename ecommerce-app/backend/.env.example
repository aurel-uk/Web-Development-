# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# For Docker: mongodb://admin:admin123@mongodb:27017/ecommerce?authSource=admin
# For Local: mongodb://localhost:27017/ecommerce
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ecommerce
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/ecommerce?authSource=admin

# JWT Tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=90d

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=noreply@ecommerce.com
FROM_NAME=E-Commerce Platform

# File Upload
MAX_FILE_SIZE=5242880
FILE_UPLOAD_PATH=./public/uploads

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# URLs
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:5000

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
MAX_LOGIN_ATTEMPTS=7
LOCKOUT_DURATION=30

# Session
SESSION_SECRET=your-session-secret-change-this
COOKIE_EXPIRE=30
